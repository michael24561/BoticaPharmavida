<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="35dp">

    <ImageView
        android:id="@+id/image_placeholder"
        android:layout_width="216dp"
        android:layout_height="204dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:src="@drawable/inicio2" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_placeholder"
        android:layout_marginTop="14dp"
        android:text="Busque en nuestra base de base de datos"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginTop="17dp"
        android:text="Es fácil encontrar una farmacia cercana a tu ubicación. Con solo un toque."
        android:textColor="#000000"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">


        <View
            android:id="@+id/indicator1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/indicator_inactive" />

        <View
            android:id="@+id/indicator3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/indicator_active" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/indicator_inactive" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_layout"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_button"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/button_rounded_blue"
            android:text="Empezar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/skip_button"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:background="@drawable/button_rounded_black"
            android:text="Saltar"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>