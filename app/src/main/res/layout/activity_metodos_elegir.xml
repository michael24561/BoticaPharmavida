<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_retroceder5"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:contentInsetStartWithNavigation="0dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menu_retroceder6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pharmavida"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="iHealth"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Bot贸n tarjeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:onClick="pagarConTarjeta">

        <ImageView
            android:id="@+id/btn_pagar_tarjeta"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/tarjeta"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar con tarjeta"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/icono_flecha2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowright" />
    </LinearLayout>

    <!-- Bot贸n Yape -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_background2"
        android:clickable="true"
        android:focusable="true"
        android:onClick="pagarConYape">

        <ImageView
            android:id="@+id/btn_pagar_yape"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/yape"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar con Yape"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/icono_flecha1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowright" />
    </LinearLayout>

    <!-- Bot贸n para mostrar el QR de Yape -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_background2"
        android:clickable="true"
        android:focusable="true"
        android:onClick="mostrarQR">

        <ImageView
            android:id="@+id/btn_mostrar_qr"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/yape"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar QR de Yape"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/icono_flecha_qr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowright" />
    </LinearLayout>


    <!-- Bot贸n PayPal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="pagarConPayPal">

        <ImageView
            android:id="@+id/btn_pagar_paypal"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/paypal"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar con PayPal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/icono_flecha3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrowright" />
    </LinearLayout>


</LinearLayout>
