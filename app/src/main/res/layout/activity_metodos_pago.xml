<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_retroceder5"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:contentInsetStartWithNavigation="0dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menu_retroceder5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pharmavida"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="iHealth"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/tituloDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de tu pedido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Sección Lugar de Recojo -->
    <LinearLayout
        android:id="@+id/lugarRecojoSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tituloDetallePedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar de Recojo"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/cambiarBotica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="end"
                android:onClick="openBoticasList"/>
        </LinearLayout>

        <!-- Lugar de Recojo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/pharmavida"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/lugarRecojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Botica Real Plaza Trujillo"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/direccionRecojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Av. Cesar Vallejo Oeste 1 1345"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/quienRecogera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Quién recogerá tu pedido?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/respuestaRecoger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
