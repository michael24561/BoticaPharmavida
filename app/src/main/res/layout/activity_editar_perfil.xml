<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar con botón de regreso y logo -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de regreso -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:contentDescription="Regresar"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar" />

    <!-- Logo de la aplicación a la derecha -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/pharmavida"
        android:contentDescription="Logo de la app"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar" />

    <!-- ScrollView que contiene el formulario de edición -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título, subtítulo y perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Título y subtítulo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit_profile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar perfil"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/edit_profile_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualiza tus datos personales"
                        android:textSize="16sp"
                        android:textColor="@color/lead"/>
                </LinearLayout>

                <!-- Imagen de perfil y botón de cambiar foto -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/iconperfil"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/change_photo_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_camara"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:elevation="8dp" />
                </FrameLayout>
            </LinearLayout>

            <!-- Campo de Nombres -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <EditText
                android:id="@+id/et_nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Michael Dangelo"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Apellido paterno y materno -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellido paterno"
                        android:textSize="16sp"
                        android:textColor="@color/lead" />

                    <EditText
                        android:id="@+id/et_apellido_paterno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fernández"
                        android:padding="12dp"
                        android:textColorHint="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellido materno"
                        android:textSize="16sp"
                        android:textColor="@color/lead" />

                    <EditText
                        android:id="@+id/et_apellido_materno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hoyos"
                        android:padding="12dp"
                        android:textColorHint="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Correo electrónico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mic************@gmail.com"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Número de documento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de documento"
                android:textColor="@color/lead"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_num_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="74578964"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Fecha de nacimiento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Selecciona una fecha"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_calendar_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendario"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Género -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Género"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <Spinner
                android:id="@+id/spinner_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
