<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_retroceder1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:contentInsetStartWithNavigation="0dp"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menu_retroceder1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pharmavida"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="iHealth"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView que contiene el formulario de edición -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_retroceder1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título, subtítulo y perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Título y subtítulo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit_profile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar perfil"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/edit_profile_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualiza tus datos personales"
                        android:textSize="16sp"
                        android:textColor="@color/lead"/>
                </LinearLayout>

                <!-- Imagen de perfil y botón de cambiar foto -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/iconperfil"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/change_photo_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_camara"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:elevation="8dp" />
                </FrameLayout>
            </LinearLayout>

            <!-- Campo de Nombres -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <EditText
                android:id="@+id/et_nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Michael Dangelo"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Campo de Apellidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellidos"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <EditText
                android:id="@+id/et_apellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fernández Hoyos"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Correo electrónico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mic************@gmail.com"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Número de documento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de documento"
                android:textColor="@color/lead"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_num_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="74578964"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Campo de Dirección -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textSize="16sp"
                android:textColor="@color/lead" />

            <EditText
                android:id="@+id/et_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ejemplo: Calle 123"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
